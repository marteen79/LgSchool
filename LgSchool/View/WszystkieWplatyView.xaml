<local:WszystkieViewBase x:Class="LgSchool.View.WszystkieWplatyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LgSchool.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding List}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Numer" Binding="{Binding NumerWplaty}"/>
                <DataGridTextColumn Header="Imie" Binding="{Binding UczenImie}"/>
                <DataGridTextColumn Header="Nazwisko" Binding="{Binding UczenNazwisko}"/>
                <DataGridTextColumn Header="Firma" Binding="{Binding FirmaNazwa}"/>
                <DataGridTextColumn Header="Data wpłaty" Binding="{Binding DataWplaty}"/>
                <DataGridTextColumn Header="Rodzaj płatności" Binding="{Binding RodzajPlatnosciNazwa}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:WszystkieViewBase>
